# Configuration du serveur MCP de traduction
# Copiez ce fichier vers .env et remplissez vos valeurs

# === AZURE STORAGE ===
AZURE_ACCOUNT_NAME=your_storage_account_name
AZURE_ACCOUNT_KEY=your_storage_account_key
INPUT_CONTAINER=doc-to-trad
OUTPUT_CONTAINER=doc-trad

# === AZURE TRANSLATOR ===
TRANSLATOR_TEXT_SUBSCRIPTION_KEY=your_translator_subscription_key
TRANSLATOR_TEXT_ENDPOINT=https://api.cognitive.microsofttranslator.com/
TRANSLATOR_REGION=westeurope

# === MICROSOFT GRAPH (OneDrive) ===
CLIENT_ID=your_app_registration_client_id
SECRET_ID=your_app_registration_client_secret
TENANT_ID=your_azure_tenant_id
ONEDRIVE_FOLDER=Documents_translate

# === SERVEUR MCP ===
MCP_SERVER_PORT=3000
MCP_LOG_LEVEL=INFO

# === LIMITES ===
MAX_FILE_SIZE_MB=100
MAX_TRANSLATION_TIME_MINUTES=30
CLEANUP_INTERVAL_HOURS=1
